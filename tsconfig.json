{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/*"]
		},
		"allowJs": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
